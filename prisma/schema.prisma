generator kysely {
    provider = "prisma-kysely"

    // Optionally provide a destination directory for the generated file
    // and a filename of your choice
    output = "../src/config/"
    fileName = "db.schema.ts"
    // Optionally generate runtime enums to a separate file
    enumFileName = "db.schema.enums.ts"
}

datasource db {
  provider = "sqlite"
  url      = env("DB_URL")
}

model Source {
  id          String @id
  name        String
  type        String
  description String
  enabled     Boolean
  config      Json
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Report {
  id          String @id
  name        String
  type        String
  content     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Record {
  id          String @id
  summary     String
  data        Json
  source      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model sqlite_master {
  type  String
  name  String
  tbl_name String @id
  rootpage Int
  sql String?
}