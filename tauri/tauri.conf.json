{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Damn Reports",
  "version": "0.1.4",
  "identifier": "com.wwu71.damn-reports",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "decorations": false,
        "width": 1180,
        "height": 720,
        "minWidth": 860,
        "minHeight": 574
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "category": "Tools",
    "copyright": "Copyright Â© 2026 Damn Reports",
    "shortDescription": "Desktop application for generating reports",
    "longDescription": "A native desktop application for running n8n workflow and generating reports",
    "icon": [
      "static/32x32.png",
      "static/128x128.png",
      "static/128x128@2x.png",
      "static/icon.icns",
      "static/icon.ico"
    ],
    "resources": [
      "prisma/migrations/"
    ]
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/hairyf/damn-reports/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "YOUR_PUBLIC_KEY_HERE"
    }
  }
}
