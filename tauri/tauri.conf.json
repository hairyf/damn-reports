{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Damn Reports",
  "version": "0.1.14",
  "identifier": "com.wwu71.damn-reports",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "decorations": false,
        "width": 1180,
        "height": 720,
        "minWidth": 860,
        "minHeight": 574
      }
    ],
    "security": {
      "csp": "default-src 'self' http://localhost:* ws://localhost:*; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; connect-src 'self' http://localhost:* ws://localhost:*",
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }

  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "category": "DeveloperTool",
    "copyright": "Copyright Â© 2026 Damn Reports",
    "shortDescription": "Desktop application for generating reports",
    "longDescription": "A native desktop application for running n8n workflow and generating reports",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "prisma/migrations/"
    ]
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/hairyf/damn-reports/releases/download/latest/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDk1ODVCMURCOUFCM0UwQjUKUldTMTRMT2EyN0dGbGVpZENPSzEyMjRFbkx2Z2NwRnZMcG9PQ3JhbnI1NURla1RlVkhwMDdMdmgK"
    }
  }
}
