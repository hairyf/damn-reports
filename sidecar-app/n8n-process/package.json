{
  "name": "damn-daily-reports-n8n",
  "version": "1.0.0",
  "description": "A process for running n8n",
  "author": "Hairyf <wwu710632@gmail.com>",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "set FORCE_COLOR=0 && electron-builder",
    "build:win": "set FORCE_COLOR=0 && electron-builder --win",
    "build:linux": "set FORCE_COLOR=0 && electron-builder --linux",
    "build:mac": "set FORCE_COLOR=0 && electron-builder --mac",
    "install": "patch-package"
  },
  "build": {
    "appId": "com.wwu71.y.n8n-process",
    "productName": "n8n Process",
    "copyright": "Copyright Â© 2025 Hairyf",
    "asar": true,
    "files": [
      "package.json",
      "main.js",
      "node_modules/**/*",
      "!release/**/*",
      "!dist/**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,tests,tests.js,benchmark,demo,example}"
    ],
    "win": {
      "target": "portable"
    },
    "linux": {
      "target": "AppImage"
    },
    "mac": {
      "target": "dmg"
    },
    "directories": {
      "output": "dist"
    }
  },
  "dependencies": {
    "n8n": "^2.1.4"
  },
  "devDependencies": {
    "patch-package": "^8.0.1"
  }
}
